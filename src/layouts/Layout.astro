---
import '@fontsource/lato/400.css';
import '@fontsource/lato/700.css';
import '@fontsource/playfair-display/700.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "NowyJa - Blog osobisty o rozwoju i transformacji" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <header class="bg-white shadow-sm">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <a href="/" class="flex items-center">
              <span class="font-serif text-2xl font-bold text-gray-900">NowyJa</span>
            </a>
          </div>
          <div class="flex space-x-8">
            <a href="/" class="inline-flex items-center px-1 pt-1 text-gray-900">Strona główna</a>
            <a href="/blog" class="inline-flex items-center px-1 pt-1 text-gray-500 hover:text-gray-900">Blog</a>
            <a href="/o-mnie" class="inline-flex items-center px-1 pt-1 text-gray-500 hover:text-gray-900">O mnie</a>
            <a href="/kontakt" class="inline-flex items-center px-1 pt-1 text-gray-500 hover:text-gray-900">Kontakt</a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-white mt-12">
      <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <p class="text-gray-500">&copy; {new Date().getFullYear()} NowyJa. Wszystkie prawa zastrzeżone.</p>
        </div>
      </div>
    </footer>
  </body>
</html>